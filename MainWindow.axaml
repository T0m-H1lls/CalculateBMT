<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Calculate_IMT.ViewModel"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:DataType="viewModel:MainWindowViewModel"
        x:Class="Calculate_IMT.MainWindow"
        Title="Calculate_IMT">
        <Window.DataContext>
                <viewModel:MainWindowViewModel/>
        </Window.DataContext>
        <Grid RowDefinitions="Auto Auto Auto Auto" ColumnDefinitions="Auto Auto Auto Auto Auto">
                
                <Label Grid.Column="1" Grid.Row = "1" Content="Рост(см)"/>
                <TextBox Grid.Column="2" Grid.Row="1" x:Name="HeightTextBox" Text="{Binding Height}"/>
                
                <Label Grid.Column="1" Grid.Row="2" Content="Вес(кг)"/>
                <TextBox Grid.Column="2" Grid.Row="2" x:Name="WeightTextBox" Text="{Binding Width}"/>
                
                <Button Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" 
                        Content="Рассчитать ИМТ" 
                        x:Name="CalculateButton"
                        Command="{Binding CalculateCommand}"/>
                <TextBlock Grid.Row="3" Grid.Column="4" x:Name="ResultTextBlock" Grid.RowSpan="4" Grid.ColumnSpan="3" 
                           Text="{Binding Result}" Foreground="{Binding Color}"/>
        </Grid> 
</Window>
